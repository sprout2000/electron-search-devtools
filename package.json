{
  "name": "electron-search-devtools",
  "description": "Locate the developer tools for Electron.",
  "version": "1.2.8",
  "license": "MIT",
  "author": {
    "name": "sprout2000"
  },
  "homepage": "https://github.com/sprout2000/electron-search-devtools#readme",
  "repository": {
    "url": "https://github.com/sprout2000/electron-search-devtools"
  },
  "bugs": {
    "url": "https://github.com/sprout2000/electron-search-devtools/issues"
  },
  "keywords": [
    "npm",
    "esm",
    "vue",
    "react",
    "redux",
    "nodejs",
    "electron",
    "typescript",
    "developer tools"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "engines": {
    "node": ">=12.20"
  },
  "scripts": {
    "compile": "run-s build minify",
    "prebuild": "rimraf dist",
    "build": "run-p build:*",
    "build:common": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "minify": "run-p minify:*",
    "minify:common": "terser dist/index.js -o dist/index.js -c -m",
    "minify:esm": "terser dist/esm/index.js -o dist/esm/index.js -c -m",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "test": "jest",
    "test:serve": "http-server -o coverage/lcov-report",
    "serve": "run-s test test:serve",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn test && yarn lint"
  },
  "devDependencies": {
    "@jest/types": "^27.0.6",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "http-server": "0.12.3",
    "jest": "^27.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "2.5.1",
    "terser": "5.7.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
